{
  "server": {
    "port": 8080,
    "host": "0.0.0.0",
    "logLevel": "debug"
  },
  "queue": {
    "concurrency": 1
  },
  "leoCli": {
    "threads": 2,
    "enableResourceProfiling": false,
    "resourceProfilingInterval": 5000,
    "network": "testnet",
    "endpoint": "https://api.explorer.provable.com/v2"
  },
  "oracle": {
    "provableDelegatedProving": {
      "enabled": true,
      "aleoApiHost": "https://api.explorer.provable.com/v2",
      "proverUrl": "",
      "baseFeeCredits": 0,
      "priorityFeeCredits": 0,
      "privateFee": false,
      "broadcast": true
    },
    "verifyAttestation": true,
    "attestationRequest": {
      "url": "price_feed: {{COIN_NAME}}",
      "requestMethod": "GET",
      "selector": "weightedAvgPrice",
      "responseFormat": "json",
      "encodingOptions": {
        "value": "float",
        "precision": 6
      }
    },
    "verifier": {
      "address": "aleorclvrfy.venture23.xyz",
      "port": 443,
      "https": true,
      "resolve": true,
      "tls": {
        "certPath": "./certs/verification/client.crt",
        "keyPath": "./certs/verification/client.key",
        "caPath": "./certs/verification/ca.crt",
        "rejectUnauthorized": false,
        "servername": "aleorclvrfy.venture23.xyz"
      }
    },
    "notarizers": [
      {
        "address": "20.83.185.145",
        "port": 8443,
        "https": true,
        "resolve": false,
        "tls": {
          "certPath": "./certs/notarization/client.crt",
          "keyPath": "./certs/notarization/client.key",
          "caPath": "./certs/notarization/ca.crt",
          "rejectUnauthorized": true,
          "servername": "nginx-mtls-proxy"
        }
      }
    ],
    "aleoProgram": {
      "name": "veru_oracle_interface_v5.aleo",
      "function": {
        "setUniqueId": "set_unique_id",
        "setSingleSgxData": "set_single_data_sgx",
        "setMultipleSgxData": "set_five_data_sgx",
        "setPublicKey": "set_key"
      }
    },
    "verulendSupportedCoins": [
      "ALEO",
      "USDC",
      "USDT"
    ],
    "supportedCoins": [
      "ALEO",
      "USDC",
      "USDT",
      "BTC",
      "ETH"
    ]
  },
  "periodicPriceUpdateCron": {
    "tokens": {
      "BTC": {
        "schedule": "0 0 */2 * * *",
        "enabled": false
      },
      "ETH": {
        "schedule": "0 0 */2 * * *",
        "enabled": false
      },
      "ALEO": {
        "schedule": "0 */5 * * * *",
        "enabled": false
      },
      "USDC": {
        "schedule": "0 */5 * * * *",
        "enabled": false
      },
      "USDT": {
        "schedule": "0 */5 * * * *",
        "enabled": false
      },
      "ALL": {
        "schedule": "0 */5 * * * *",
        "enabled": true
      }
    }
  },
  "deviationBasedPriceUpdateCron": {
    "tokens": {
      "BTC": {
        "deviation": 2,
        "schedule": "0 0 */2 * * *",
        "enabled": false
      },
      "ETH": {
        "deviation": 2,
        "schedule": "0 0 */2 * * *",
        "enabled": false
      },
      "ALEO": {
        "deviation": 3,
        "schedule": "0 */5 * * * *",
        "enabled": false
      },
      "USDC": {
        "deviation": 0.5,
        "schedule": "0 */5 * * * *",
        "enabled": false
      },
      "USDT": {
        "deviation": 0.5,
        "schedule": "0 */5 * * * *",
        "enabled": false
      },
      "ALL": {
        "deviation": 0.5,
        "schedule": "0 0 */1 * * *",
        "enabled": false
      }
    }
  },
  "discord": {
    "webhookUrl": "DISCORD_WEBHOOK_URL",
    "enableTransactionAlert": false,
    "enablePriceUpdateAlert": false,
    "enableCronJobAlert": false,
    "enableServiceStatusAlert": true,
    "enableSystemHealthAlert": true,
    "enableErrorAlert": true
  },
  "security": {
    "internalApiKey": "your-secure-internal-api-key-here",
    "requireApiKey": true
  }
}